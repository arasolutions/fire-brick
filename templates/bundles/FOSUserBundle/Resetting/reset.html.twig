{% extends "@!FOSUser/Resetting/request.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block fos_user_content %}
    <section class="g-bg-izibrick-light-v5 g-bg-img-hero"
             style="height: 130%; background-image: url({{ asset('templates/bo/img/bg6.jpg') }});">
        <div class="container g-py-100">
            <div class="row justify-content-center">
                <div class="col-sm-8 col-lg-5">
                    <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                        <header class="text-center mb-4">
                            <h2 class="h2 g-color-black g-font-weight-600">Réinitialisation de votre mot de passe</h2>
                        </header>
                        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger">
                                Les mots de passe sont différents.
                            </div>
                        {% endif %}
                        <div class="col-sm-12 form-group">
                            {{ form_label(form.plainPassword.first, null, {'label_attr':{'class':'g-color-gray-dark-v2 g-font-weight-600 g-font-size-13'}}) }}
                            {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3'}}) }}
                        </div>
                        <div class="col-sm-12 form-group">
                            {{ form_label(form.plainPassword.second, null, {'label_attr':{'class':'g-color-gray-dark-v2 g-font-weight-600 g-font-size-13'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3'}}) }}
                        </div>
                        <div class="col-sm-12 form-group text-center">
                            <input type="submit" class="btn btn-md rounded g-py-13 g-px-25 btn-success"
                                   value="{{ 'resetting.reset.submit'|trans }}"/>
                        </div>
                        {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

