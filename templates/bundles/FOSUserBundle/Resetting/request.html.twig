{% extends "@!FOSUser/Resetting/request.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block fos_user_content %}
<section class="g-bg-izibrick-light-v5 g-bg-img-hero" style="height: 130%; background-image: url({{ asset('templates/bo/img/bg6.jpg') }});">
    <div class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Réinitialisation de votre mot de passe</h2>
                    </header>
                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST"
                          class="fos_user_resetting_request">
                        <div class="form-group">
                            <input type="text" id="username" name="username" placeholder="Email" required="required"
                                   class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15"/>
                        </div>
                        <div class="form-group text-center">
                            <input class="btn btn-md rounded g-py-13 g-px-25 btn-danger" type="submit"
                                   value="{{ 'resetting.request.submit'|trans }}"/>
                        </div>
                    </form>
                    <div class="pad-top pull-right">
                        <a href="{{ path('fos_user_security_login') }}" class="g-font-size-12">Retour à la
                            connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock fos_user_content %}