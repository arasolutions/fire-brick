    <!-- Skin -->
    <link rel="stylesheet"
          href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/skin/default.css') }}">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/custom.css') }}">
    <style type="text/css">
        :root {
            --colorTheme: {{ site.colorTheme }};
            --textColor: {{ site.textColor }};
        }
    </style>

    <!-- Firebrick LESS -->
    <link rel="stylesheet" href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/izibrick.css') }}">
</head>

<body>

<!--Header-->
<header id="header" class="header-effect-reveal"
        data-plugin-options="{'stickyEnabled': true, 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyHeaderContainerHeight': 70, 'stickyStartAt': 120}">
    <div class="header-body no-shadow">
        <div class="header-container container">
            <div class="header-row">
                <div class="header-column justify-content-start">
                    <div class="header-logo">
                        <a href="{{ path('home') }}">
                            <img alt="Vertex" height="35"
                                 src="{{ vich_uploader_asset(site, 'logoFile') | imagine_filter('logo') }}"/>
                        </a>
                        {% if not site.nameInLogo %}
                            <span class="logo-title">{{ site.name }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="header-column justify-content-end">
                    <div class="header-nav">
                        <div class="header-nav-main header-nav-main-effect-1 header-nav-main-sub-effect-1">
                            <nav class="collapse">
                                <ul class="nav flex-column flex-lg-row" id="mainNav">
                                    {% set siteName = site.name|param(app.request.server.get('REQUEST_URI')) %}
                                    <li class="dropdown dropdown-mega">
                                        <a class="dropdown-item {% block indexActive %}{% endblock %}"
                                           href="{{ path('home'|route(app.request.server.get('REQUEST_URI')), siteName) }}">
                                            Accueil
                                        </a>
                                    </li>
                                    <li class="dropdown dropdown-mega dropdown-mega-style-2">
                                        <a class="dropdown-item {% block presentationActive %}{% endblock %}"
                                           href="{{ path('presentation'|route(app.request.server.get('REQUEST_URI')), siteName) }}">
                                            Présentation
                                        </a>
                                    </li>
                                    <li class="dropdown dropdown-mega dropdown-mega-style-2">
                                        <a class="dropdown-item {% block blogActive %}{% endblock %}"
                                           href="{{ path('blog'|route(app.request.server.get('REQUEST_URI')), siteName) }}">
                                            Blog
                                        </a>
                                    </li>
                                    <li class="dropdown dropdown-mega dropdown-mega-style-2">
                                        <a class="dropdown-item {% block devisActive %}{% endblock %}"
                                           href="{{ path('devis'|route(app.request.server.get('REQUEST_URI')), siteName) }}">
                                            Devis
                                        </a>
                                    </li>
                                    <li class="dropdown dropdown-mega dropdown-mega-style-2">
                                        <a class="dropdown-item {% block contactActive %}{% endblock %}"
                                           href="{{ path('contact'|route(app.request.server.get('REQUEST_URI')), siteName) }}">
                                            Contact
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <button class="header-btn-collapse-nav ml-3" data-toggle="collapse"
                                data-target=".header-nav-main nav">
                                <span class="hamburguer">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </span>
                            <span class="close">
                                    <span></span>
                                    <span></span>
                                </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!--End Header-->

