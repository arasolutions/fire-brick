{% extends 'sites/template-' ~ site.template.id ~ '/base.html.twig' %}

{% block title %}{{site.name}} | Devis{% endblock %}

{% block devisActive %}active{% endblock %}

{% block body %}
    <section class="page-header parallax page-header-text-light page-header-crumbs-light-2 overlay overlay-color-dark overlay-show overlay-op-3 py-0" data-plugin-parallax data-plugin-options="{'speed': 1.5}" data-image-src="{{ vich_uploader_asset(site.home, 'mainPictureFile') | imagine_filter('main_picture') }}">
        <div class="container py-9">
            <div class="row text-left">
                <div class="col-lg-12">
                    <p class="v-smash-text-large-2x">Devis</p>
                </div>
            </div>
        </div>
    </section>

    <div class="v-page-wrap has-right-sidebar has-one-sidebar">
        <div class="container">
            <div class="post-block-wrap" id="comment-area">
                <h3 class="v-heading"><span>Demander un devis</span></h3>
                <p>{{ quote.presentation }}</p>
                <form action="#" method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Nom <span class="required">*</span></label>
                                <input type="text" value="" maxlength="100" placeholder="Votre nom" class="form-control" name="name" id="name">
                            </div>
                            <div class="col-sm-4">
                                <label>Email <span class="required">*</span></label>
                                <input type="email" value="" placeholder="Votre email" maxlength="100" class="form-control" name="email" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Demande <span class="required">*</span></label>
                                <textarea maxlength="5000" rows="10" placeholder="Votre demande" class="form-control" name="comment" id="comment"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button name="submit" type="submit" id="Button1" class="btn v-btn v-btn-default no-three-d"><i class="fa fa-send-o" aria-hidden="true"></i> Envoyer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



{% endblock %}
