<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="keywords" content="responsive, catalog, cart, themes, twitter bootstrap, bootstrap">
    <meta name="author" content="afriq yasin ramadhan">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>{% block title %}{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/bootstrap.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/responsive.css') }}" rel="stylesheet">
    <style type="text/css">
        :root {
            --colorTheme: {{ site.colorTheme }};
            --textColor: {{ site.textColor }};
        }
    </style>
    <link href="{{ asset('templates/template-' ~ site.template.id ~ '/assets/css/izibrick.css') }}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/html5shiv.js') }}"></script>
    <script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/respond.min.js') }}"></script>
    <![endif]-->
</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand visible-xs" href="#">Dodolan Manuk</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav nav-left">
                <li class="{% block indexActive %}{% endblock %}">
                    <a href="{{ path('home') }}">
                        <span class="label-nav">Accueil</span>
                    </a>
                </li>

                <li class="{% block presentationActive %}{% endblock %}">
                    <a href="{{ path('presentation') }}">
                        <span class="label-nav">Présentation</span>
                    </a>
                </li>

                <li class="{% block blogActive %}{% endblock %}">
                    <a href="{{ path('blog') }}">
                        <span class="label-nav">Blog</span>
                    </a>
                </li>
            </ul>
            <a href="#" class="logo visible-lg visible-md">
                <img src="{{ vich_uploader_asset(site, 'logoFile') | imagine_filter('logo') }}"
                     alt="Logo {{ site.name }}"/>
            </a>
            <div id="brand" class="visible-lg visible-md">&nbsp;</div>
            <ul class="nav navbar-nav nav-right">
                <li class="{% block devisActive %}{% endblock %}">
                    <a href="{{ path('devis') }}">
                        <span class="label-nav">Devis</span>
                    </a>
                </li>
                <li class="{% block contactActive %}{% endblock %}">
                    <a href="{{ path('contact') }}">
                        <span class="label-nav">Contact</span>
                    </a>
                </li>
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div>
    {% block body %}    {% endblock %}
</div>


<!-- begin:footer -->
<div id="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>{{ site.name }}</h3>
                <p>{{ site.description }}</p>
                {% if site.hasOneSocialLink %}
                    <ul class="list-unstyled social-icon">
                        {% if site.facebook %}
                            <li><a href="{{ site.facebook }}" rel="tooltip" title="Facebook"
                                   class="icon-facebook"><span><i
                                                class="fa fa-facebook-square"></i></span></a></li>
                        {% endif %}
                        {% if site.twitter %}
                            <li><a href="{{ site.twitter }}" rel="tooltip" title="Twitter" class="icon-twitter"><span><i
                                                class="fa fa-twitter"></i></span></a></li>
                        {% endif %}
                        {% if site.instagram %}
                            <li><a href="{{ site.instagram }}" rel="tooltip" title="Instagram"
                                   class="icon-instagram"><span><i
                                                class="fa fa-instagram"></i></span></a></li>
                        {% endif %}
                    </ul>
                {% endif %}

                <div class="sitemap">
                    <ul>
                        <li><a href="{{ path('home') }}">ACCUEIL</a></li>
                        <li><a href="{{ path('presentation') }}">PRESENTATION</a></li>
                        <li><a href="{{ path('blog') }}">BLOG</a></li>
                        <li><a href="{{ path('devis') }}">DEVIS</a></li>
                        <li><a href="{{ path('contact') }}">CONTACT</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end:footer -->

<!-- begin:copyright -->
<div id="copyright">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <small>&copy; {{ "now"|date('Y') }} {{ site.domain }} | Développé par
                    <a href="http://www.ara-solutions.com" target="_blank">ARA Solutions</a></small>
            </div>
        </div>
    </div>
</div>
<!-- end:copyright -->

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/jquery.js') }}"></script>
<script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/bootstrap.js') }}"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>
<script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/gmap3.js') }}"></script>
<script src="{{ asset('templates/template-' ~ site.template.id ~ '/assets/js/script.js') }}"></script>

</body>
</html>