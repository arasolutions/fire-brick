        forwardModal = function (previous, next) {
            $('#tuto-' + previous).on('hidden.bs.modal', function (e) {
                var tutoNext = eval('prepareTuto' + next + '()');
                tutoNext.modal('show');
            })
            $('#tuto-' + previous).modal('hide');
        }

        exitTuto = function () {
            $(".modal").modal("hide");
