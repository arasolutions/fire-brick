{% extends 'admin/base.html.twig' %}


{% block title %}Page Accueil{% endblock %}

{% block description %}Représente la première page de votre site{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/plugins/summernote/summernote.min.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
    {% if success %}
        <div class="alert alert-success">
            <strong>Parfait !</strong> Votre accueil à bien été mis à jour.
        </div>
    {% endif %}
    <div class="panel">
        <div class="panel-body">
            {{ form_start(form) }}

            <div class="panel panel-mint">
                <div class="panel-heading">
                    <h3 class="panel-title"><label class="control-label">Image de fond</label></h3>
                </div>
                <div class="panel-body">
                    <div class="col-sm-2">
                        {% if site.home.mainPicture is defined and site.home.mainPicture is not null %}
                            <img src="{{ vich_uploader_asset(site.home, 'mainPictureFile') | imagine_filter('logo') }}" />
                        {% endif %}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.mainPicture, {'attr':{'class':'form-control input-lg'}}) }}
                    </div>
                    <div class="col-sm-12 mt10">
                        <div class="col-sm-2">
                            <label class="control-label"  style="text-align:left;">{{ form_label(form.textPicture) }}</label>
                        </div>
                        <div class="col-sm-10">
                            <div>
                                {{ form_widget(form.textPicture, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-mint">
                <div class="panel-heading">
                    <h3 class="panel-title"><label class="control-label">Contenu de la page</label></h3>
                </div>
                <div class="panel-body">
                    <div class="col-sm-12">
                        <div id="summernote">
                            {% if site.home.content is defined %}
                                {{ site.home.content | raw }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <button id="form-submit-whitout-valid" class="btn btn-success pull-right" type="submit">
                    Enregistrer
                </button>
                <button id="form-revert" class="btn btn-danger pull-right margin-right-10" type="button">
                    Annuler
                </button>
            </div>
            <!--===================================================-->
            <!-- End Summernote -->
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/plugins/summernote/summernote.min.js') }}"></script>
    <script type="text/javascript">
        const originalContent = $('#edit_home_content');
        const itemContent = $('#edit_home_content');
    </script>
    <script src="{{ asset('assets/js/demo/form-text-editor.js') }}"></script>
{% endblock %}