{% extends 'admin/base.html.twig' %}


{% block title %}Page Tarifs{% endblock %}

{% block description %}Représente les tarifs à afficher sur votre site de votre site{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/plugins/summernote/summernote.min.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
    {% if success %}
        <div class="alert alert-success">
            <strong>Parfait !</strong> Votre page Devis à bien été mise à jour.
        </div>
    {% endif %}
    <div class="panel">
        <div class="panel-body">

            <div class="panel panel-mint">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <label class="control-label">
                            {% if pricingProduct.id is defined %}
                                Modifer une catégorie
                            {% else %}
                                Ajouter une catégorie
                            {% endif %}
                            {{ form_start(form) }}
                        </label>
                    </h3>
                </div>
                <div class="panel-body">

                    <div class="col-sm-12 form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm-12 form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm-12 form-group">
                        {{ form_label(form.displayOrder) }}
                        {{ form_widget(form.displayOrder, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm-12 form-group">
                        {{ form_label(form.active) }}
                        {{ form_widget(form.active, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <button id="form-submit-whitout-valid" class="btn btn-success pull-right" type="submit">
                    Enregistrer
                </button>
                <a href="{{ path('bo-pricing') }}">
                    <button class="btn btn-danger pull-right mr10" type="button">
                        Annuler
                    </button>
                </a>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}